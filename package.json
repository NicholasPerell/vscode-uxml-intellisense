{
  "name": "REPLACE_ME",
  "description": "REPLACE_ME",
  "author": "REPLACE_ME",
  "license": "MIT",
  "version": "1.0.0",
  "publisher": "REPLACE_ME",
  "categories": [],
  "engines": {
    "vscode": "^1.75.0"
  },
  "activationEvents": [
    "onLanguage:UnityUXML"
  ],
  "main": "./client/out/extension",
  "contributes": {
    "languages": [
      {
        "id": "UnityUXML",
        "aliases": [
          "UnityUXML"
        ],
        "extensions": [
          ".uxml",
          ".uxml_"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "UnityUXML",
        "scopeName": "text.xml.uxml",
        "path": "./syntaxes/uxmlScratch.tmLanguage.json"
      }
    ],
    "configurationDefaults": {
      "[UnityUXML]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 4,
        "editor.quickSuggestions": {
          "other": true,
          "comments": false,
          "strings": true
        },
        "editor.autoIndent": "keep"
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd .."
  },
  "devDependencies": {
    "@types/node": "^20.5.7",
    "typescript": "^5.2.2"
  }
}
